// tsconfig.json
{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "#imports": ["./.nuxt/imports.d.ts"],
      "#build/*": ["./.nuxt/*"]
    }
  },
  "include": [
    "./**/*",
    ".nuxt/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}